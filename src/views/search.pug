extends base.pug

block body
    .container(class="mt-2")
        .row: .col(class="col-12 mb-4")
                h3 Search #{searchDetail} 

        .row(class="row-cols-2 row-cols-md-5")
            each data in search
                .col(class="mb-3")
                    .animeCard
                        a(href="/anime/" + data.id) 
                            img(src=data.img, alt=data.title class="img-fluid" height="100%")
                            .dark-image
                            p.anime-title #{data.details.join(", ")}
                            p.anime-rilis #{data.title}